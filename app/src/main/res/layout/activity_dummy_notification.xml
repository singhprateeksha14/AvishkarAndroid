<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_dummy_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NotificationActivity">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="55dp"
        android:text="Name:" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameTextView"
        android:layout_alignStart="@+id/nameTextView"
        android:layout_below="@+id/nameEditText"
        android:layout_marginTop="27dp"
        android:text="Email:" />

    <TextView
        android:id="@+id/phoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailTextView"
        android:layout_alignStart="@+id/emailTextView"
        android:layout_below="@+id/emailTextView"
        android:layout_marginTop="35dp"
        android:layout_toLeftOf="@+id/nameEditText"
        android:text="Phone:" />

    <Button
        android:id="@+id/createEventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:text="Create Calendar Invite"
        android:layout_below="@+id/locationEditText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nameTextView"
        android:layout_alignBottom="@+id/nameTextView"
        android:layout_alignStart="@+id/emailEditText"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Jack Sparrow"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/emailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/emailTextView"
        android:layout_alignBottom="@+id/emailTextView"
        android:layout_alignStart="@+id/phoneEditText"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="pratsona@gmail.com"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/phoneEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/phoneTextView"
        android:layout_alignEnd="@+id/createEventButton"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:inputType="phone"
        android:text="9975794996" />

    <TextView
        android:id="@+id/notesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Notes:"
        android:layout_below="@+id/phoneEditText"
        android:layout_alignStart="@+id/phoneTextView" />

    <TextView
        android:id="@+id/notesEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/notesTextView"
        android:layout_alignBottom="@+id/notesTextView"
        android:layout_alignStart="@+id/phoneEditText"
        android:ems="10"
        android:inputType="text"
        android:text="Discussion on Mutual Funds SIP"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/notesTextView"
        android:layout_below="@+id/notesTextView"
        android:layout_marginTop="30dp"
        android:text="Location" />

    <EditText
        android:id="@+id/locationEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/locationTextView"
        android:layout_alignBottom="@+id/locationTextView"
        android:layout_alignStart="@+id/notesEditText"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/callButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/locationTextView"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="17dp"
        android:text="Call Client" />

    <Button
        android:id="@+id/emailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/locationEditText"
        android:layout_alignTop="@+id/callButton"
        android:layout_marginEnd="31dp"
        android:text="Send Email" />

</RelativeLayout>
